<h2>Log in</h2>


<div class="container">
  <div class="row">
    <h1>Se connecter</h1>
  </div>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, class:"input-legaliio" %>
        <%= f.input :password, required: false, class:"input-legaliio" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class:"sign-in-btn" %>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

